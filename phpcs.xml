<?xml version="1.0"?>
<ruleset name="ElephantWrenchStandard">
    <description>The coding standard for ElephantWrench</description>
    <file>src</file>
    <file>tests</file>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>cache/*</exclude-pattern>
    <exclude-pattern>/tests/Helpers/ClassMixerTestClass.php</exclude-pattern>
    <rule ref="PSR2">
        <exclude name="PSR2.Namespaces.UseDeclaration"/>
        <exclude name="Generic.Files.LineLength"/>
    </rule>
    <rule ref="PSR2.Methods.FunctionCallSignature">
        <properties>
            <property name="allowMultipleArguments" value="true"/>
        </properties>
    </rule>
</ruleset>
